.order-enter
  transform: translateX(-120%);
  transition: 0.25s;
  max-height: 0;
  padding 0; !important 
  &.order-enter-active
    max-height: 60px;
    transform: translateX(0);
    padding 2rem 0; !important

.order-exit
  transition: 0.25s;
  transform: translateX(0);
  &.order-exit-active
    padding: 0;       
    transform: translateX(120%);